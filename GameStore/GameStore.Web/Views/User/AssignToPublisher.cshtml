@model AssignToPublisherViewModel
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["Title"];
}

<div>
    <span class="font-weight-bold">@Localizer["UserId"]:</span>
    <span class="pl-3">@Model.UserId</span>
</div>
<form asp-action="AssignToPublisherAsync">
    <input type="hidden" asp-for="UserId">
    <div class="form-group">
        <label asp-for="PublisherId">@Localizer["Publisher"]</label>
        <select asp-for="PublisherId" asp-items="Model.Publishers" class="form-control"></select>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">
            @Localizer["AssignButton"]
        </button>
    </div>
</form>