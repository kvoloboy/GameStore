@model VisaViewModel
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["Title"];
}

<form asp-action="VisaCheckout" asp-controller="Payment">
    <input type="hidden" asp-for="OrderId">
    <div class="form-group">
        <label asp-for="CardHolder">@Localizer["CardHolder"]</label>
        <input asp-for="CardHolder" class="form-control">
        <span asp-validation-for="CardHolder"></span>
    </div>
    <div class="form-group">
        <label asp-for="CardNumber">@Localizer["CardNumber"]</label>
        <input asp-for="CardNumber" type="number" class="form-control">
        <span asp-validation-for="CardNumber"></span>
    </div>
    <div class="form-group">
        <label asp-for="CvCode">CVV2/CVC2</label>
        <input asp-for="CvCode" class="form-control">
        <span asp-validation-for="CvCode"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExpirationDate">@Localizer["ExpirationDate"]</label>
        <input asp-for="ExpirationDate"  type="month" class="form-control">
        <span asp-validation-for="ExpirationDate"></span>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">@Localizer["ConfirmButton"]</button>
    </div>
</form>