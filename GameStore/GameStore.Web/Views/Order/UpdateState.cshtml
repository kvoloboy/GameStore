@model UpdateStateViewModel
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["Title"];
}

<div>
    <div>
        <span class="font-weight-bold">@Localizer["OrderId"]:</span>
        <span class="pl-3">@Model.OrderId</span>
    </div>
    <form asp-action="UpdateStateAsync">
        <input type="hidden" asp-for="OrderId">
        <div class="form-group">
            <label asp-for="State">@Localizer["State"]</label>
            <select asp-for="State" asp-items="Model.States" class="form-control"></select>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">@Localizer["UpdateButton"]</button>
        </div>
    </form>
</div>